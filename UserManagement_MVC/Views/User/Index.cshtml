@{
}

<h1>Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>         
            <th>Email</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var u in Model)
        {
                        <tr>
                            <td>@u.Id</td>
                            <td>@u.UserName</td>
                            <td>@u.FirstName</td>
                            <td>@u.LastName</td>                       
                            <td>@u.Email</td>   
                            <td><a class="btn btn-primary" href="User/Update/@u.Id" >Edit</a></td>
                          
                             <td><a class="btn btn-danger" onclick="return confirm('Are you sure you want to delete?')" asp-action="Delete" asp-controller="User" asp-route-id="@u.Id">Delete</a></td>
                          
                        </tr>
        }
    </tbody>
</table>

 <a class="btn btn-primary" asp-controller="User"   asp-action="Logout">Logout</a>



         
