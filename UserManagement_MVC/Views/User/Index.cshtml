@{
}
<div class="pagetitle row ">
    <div class="col-md-6">
            <h1>Users</h1>
    </div>

    <div  class="col-md-6 text-right">
       <a type="button" class="btn btn-dark float-end" asp-controller="User" asp-action="Logout" >Logout</a>
    </div>


</div>
   @* <a type="button" class="btn btn-dark float-end" asp-controller="User" asp-action="GetCurrentUser" >Logout</a>*@
<table class="table table-striped">
                <thead class="head">
                  <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Username</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                                        <tr>
                                            <td>@u.Id</td>
                                            <td>@u.UserName</td>
                                            <td>@u.FirstName</td>
                                            <td>@u.LastName</td>                       
                                            <td>@u.Email</td>   
                                            <td><a class="btn btn-primary" href="User/Update/@u.Id" >Edit</a></td>

                                             <td><a class="btn btn-danger" onclick="return confirm('Are you sure you want to delete?')" asp-action="Delete" asp-controller="User" asp-route-id="@u.Id">Delete</a></td>

                                        </tr>
                    }
                  
                </tbody>
</table>